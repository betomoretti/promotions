<%- model_class = Promotion -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:quota) %>:</strong></dt>
  <dd><%= @promotion.quota %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bin) %>:</strong></dt>
  <dd><%= @promotion.bin %></dd>
  <dt><strong><%= model_class.human_attribute_name(:legal_description) %>:</strong></dt>
  <dd><%= @promotion.legal_description %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              promotions_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_promotion_path(@promotion), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              promotion_path(@promotion),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
