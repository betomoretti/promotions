<script>
  $(document).ready(function() { 
    $("#promotion_bank_id").select2({allowClear: true,placeholder: 'Seleccione un banco'});
    $("#promotion_credit_card_id").select2({allowClear: true,placeholder: 'Seleccione una tarjeta'});
    $('.date').mask("00/00/0000", {placeholder: "__/__/____"});
  });
</script>

<%= form_for(@promotion, :html => { :class => @promotion.new_record? ? 'form-horizontal promotion' : 'form-horizontal promotion promotion-edit-form'}, data: {id: !@promotion.new_record? ? @promotion.id : ''}) do |f| %>
  <div id="errors" role="alert"><p></p></div>
  <div class="form-group">
    <%= f.label "Fecha de inicio", :class => 'control-label col-lg-2' %>
    <div class="col-lg-5">
      <%= f.text_field :start_date, :required => true, :class => 'form-control date' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Fecha de fin", :class => 'control-label col-lg-2' %>
    <div class="col-lg-5">
      <%= f.text_field :end_date, :required => true, :class => 'form-control date' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Activo", :class => 'control-label col-lg-2' %>
    <div class="col-lg-1">
      <%= f.check_box :active, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Cuotas", :class => 'control-label col-lg-2' %>
    <div class="col-lg-5">
      <%= f.text_field :quota, :placeholder => "Ej: 1, 3 y 6", :required => true, :class => 'form-control' %>
      
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Bins", :class => 'control-label col-lg-2' %>
    <div class="col-lg-5">
      <%= f.text_field :bin, :placeholder => "Ej: 1234, 5678", :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label "Banco", :class => 'control-label col-lg-2' %>
    <div class="col-lg-5">
      <%= select(:promotion, :bank_id, @banks, { include_blank: true }, :class => 'form-control') %>
    </div>

  </div>
  <div class="form-group">
    <%= f.label "Tarjeta de credito", :class => 'control-label col-lg-2' %>
    <div class="col-lg-5">
      <%= select(:promotion, :credit_card_id, @credit_cards, { include_blank: true }, :class => 'form-control') %>
    </div>
  </div>
      
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit @promotion.new_record? ? 'Crear' : 'Editar', :id => 'send_promotion_form', :class => 'btn btn-primary' %>
    </div>
  </div>

<% end %>
<script type="text/javascript">
</script>
