<%- model_class = CreditCard -%>
<div class="page-header">
  <h1>Tarjetas de credito</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Cantidad de digitos</th>
      <th>Cantidad de digitos de seguridad</th>
      <th>Comienzo de bin</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @credit_cards.each do |credit_card| %>
      <tr>
        <td><%= link_to credit_card.name, credit_card_path(credit_card) %></td>
        <td><%= credit_card.quantity_digits %></td>
        <td><%= credit_card.quantity_code_security %></td>
        <td><%= credit_card.bin_start %></td>
        <td>
          <%= link_to "Editar",
                      edit_credit_card_path(credit_card), :class => 'btn btn-default btn-xs' %>
          <%= link_to "Eliminar",
                      credit_card_path(credit_card),
                      :method => :delete,
                      :data => { :confirm => "Esta seguro de eliminar esta tarjeta de credito?" },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Nuevo",
            new_credit_card_path,
            :class => 'btn btn-primary' %>
