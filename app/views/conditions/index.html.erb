<div class="page-header">
  <h1>Condiciones</h1>
  
  <%= link_to 'Nueva condicion', new_condition_path,
              :class => 'btn btn-primary' %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Fecha de inicio</th>
      <th>Fecha de fin</th>
      <th>Descripcion legal</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @conditions.each do |condition| %>
      <tr>
        <td><%= condition.legal_description %></td>
        <td><%= condition.start_date %></td>
        <td><%= condition.end_date %></td>
        <td>
          <%= link_to 'Editar', edit_condition_path(condition),:class => 'btn btn-default btn-xs' %>
          <%= link_to 'Eliminar', condition, method: :delete, data: { confirm: 'Esta seguro de eliminar esta condicion?' }, :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

