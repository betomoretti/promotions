<%- model_class = Bank -%>
<div class="page-header">
  <h1>Bancos</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @banks.each do |bank| %>
      <tr>
        <td><%= link_to bank.name, bank_path(bank) %></td>
        <td>
          <%= link_to "Editar",
                      edit_bank_path(bank), :class => 'btn btn-default btn-xs' %>
          <%= link_to "Eliminar",
                      bank_path(bank),
                      :method => :delete,
                      :data => { :confirm => "Esta seguro de eliminar este banco?" },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Nuevo",
            new_bank_path,
            :class => 'btn btn-primary' %>
