<%= form_for @airline, :html => { :class => "form-horizontal airline" } do |f| %>

  <% if @airline.errors.any? %>
  <% end %>

  <div class="form-group">
    <%= f.label "Nombre", :class => 'control-label col-lg-2' %>
    <div class="col-lg-3">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>

  <div class="form-group">
    <%= f.label "Iata code", :class => 'control-label col-lg-2' %>
    <div class="col-lg-3">
      <%= f.text_field :iata_code, :class => 'form-control' %>
    </div>
    <%=f.error_span(:iata_code) %>
  </div>

  <div class="form-group">
    <%= f.label "edad màxima niño", :class => 'control-label col-lg-2' %>
    <div class="col-lg-3">
      <%= f.text_field :max_age_child, :class => 'form-control' %>
    </div>
    <%=f.error_span(:max_age_child) %>
  </div>    

  <div class="form-group">
    <%= f.label "edad màxima infant", :class => 'control-label col-lg-2' %>
    <div class="col-lg-3">
      <%= f.text_field :max_age_infant, :class => 'form-control' %>
    </div>
    <%=f.error_span(:max_age_infant) %>
  </div>    

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit "Crear", :class => 'btn btn-primary' %>
      <%= link_to "Cancelar",
                airlines_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
