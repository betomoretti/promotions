<%- model_class = Airline -%>
<div class="page-header">
  <h1>Aerolineas</h1>
</div>
<%= link_to "Nueva",
            new_airline_path,
            :class => 'btn btn-primary' %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Acciones</th>      
    </tr>
  </thead>
  <tbody>
    <% @airlines.each do |airline| %>
      <tr>
        <td><%= link_to airline.name, airline_path(airline) %></td>
        <td>
          <%= link_to "Editar",
                      edit_airline_path(airline), :class => 'btn btn-default btn-xs' %>
          <%= link_to "Eliminar",
                      airline_path(airline),
                      :method => :delete,
                      :data => { :confirm => "Esta seguro de eliminar esta aerolinea?" },
                      :class => 'btn btn-xs btn-danger' %>                  
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
